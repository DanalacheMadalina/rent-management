<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBrightBlue</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="navBar" parent="Theme.AppCompat.Light">
        <item name="colorAccent"> @color/colorBrightBlue</item></style>
    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorBlue</item>
    </style>
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/buton_personalizat</item>

    </style>
</resources>
